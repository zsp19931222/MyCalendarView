<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#55B2F5"/>
            <corners android:radius="4px" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="4px" />

            <stroke
                android:width="1px"
                android:color="#ffffff" />
        </shape>
    </item>

</layer-list>